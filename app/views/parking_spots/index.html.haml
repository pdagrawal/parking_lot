.container
  .row
    .col-sm-6
      %h2 Parking Spots
    .col-sm-6
      = link_to 'New Parking Spot', '#', class: "float-right btn btn-success"
  %table.table.table-hover.table-condensed
    %thead
      %tr
        %th Name
        %th Spot Type
        %th Available
    %tbody
      - if @parking_spots.present?
        - @parking_spots.each do |spot|
          %tr
            %td= spot.name
            %td= spot.spot_type.humanize
            %td= !spot.occupied ? 'Yes' : 'No'
  - if @parking_spots.present?
    .col-sm-12.reports-Header
      #discount-definition-paginator.mb-0
        = will_paginate @parking_spots
  - else
    No records found
